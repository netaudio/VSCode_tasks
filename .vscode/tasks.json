{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "linux": {
                "command": "sh",
                "args": [
                    "-c",
                    "mkdir -p bin",
                    "&",
                    "g++",
                    "-g",
                    "--std=c++17",
                    "main.cpp",
                    "-o", "${workspaceFolder}/bin/out"
                ]
            },
            "windows": {
                "command": "cmd",
                "args": [
                    "/C",
                    "IF not exist",
                    "bin",
                    "(mkdir bin)",
                    "&",
                    "g++",
                    "-g",
                    "--std=c++17",
                    "main.cpp",
                    "-o", "${workspaceFolder}/bin/out"
                ]
            },
            "osx": {
                "command": "sh",
                "args": [
                    "-c",
                    "mkdir -p bin",
                    "&",
                    "g++",
                    "-g",
                    "--std=c++17",
                    "main.cpp",
                    "-o", "${workspaceFolder}/bin/out"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "linux": {
                "command": "rm",
                "args": [
                    "-rfv",
                    "bin/*"
                ]
            },
            "windows": {
                "command": "del",
                "args": [
                    "/S",
                    "/Q",
                    "bin\\*"
                ]
            },
            "osx": {
                "command": "rm",
                "args": [
                    "-rfv",
                    "bin/*"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./Main",
            "group": {
                "kind": "test", 
                "isDefault": true
            }
        }
    ]
}
